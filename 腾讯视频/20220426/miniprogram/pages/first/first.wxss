.header{
    padding: 0px 20rpx;
    overflow: hidden;
}
.header image{
    width: 200rpx;
    float:left
}
.header navigator{
    float: right;
    font-size: 12px;
    color: #666;
    margin-top: 8rpx;
}
.header text{
    float: right;
    padding: 8rpx 10rpx;
    font-size: 12px;
    background: orange;
    color: #fff;
    border-radius: 20rpx;
    margin-right: 20px;
}
scroll-view{
    white-space:nowrap;
}
scroll-view view{
    display: inline-block;
    padding: 10rpx 20rpx;
    font-size: 16px;
    position: relative;

}
.current{
    color: orangered;
}
.current text{
    width: 10px;
    height: 2px;
    background: orangered;
    position: absolute;
    bottom: 0px;
    left: 50%;
    margin-left: -5px;
}
swiper{
    margin-left: 20rpx;
    margin-right: 20rpx;
    height: 450rpx;
}
swiper image{
    width: 710rpx;
}
swiper .left{
    float:left;
    font-size: 12px;
}
swiper .right{
    float: right;
    font-size: 12px;
}
.hot{
    margin-left: 20rpx;
    margin-right: 20rpx;
}
.hot view view{
    width: 350rpx;
    float:left
}
.hot view view:nth-of-type(2n){
    margin-left: 10rpx;
}
.hot image{
    width: 350rpx;
}
.hot .title{
    font-weight: bold;
    margin-bottom: 20rpx;
    display: block;
    margin-top: 20rpx;
}
.hot .top{
    font-size: 14px;
    display: block;
}
.hot .des{
    font-size: 12px;
    display: block;
    color: #999;
    margin-bottom: 20rpx;
    margin-top: 8rpx;
}
.down view view{
    width: 230rpx;
}
.down image{
    width: 230rpx;
}
.down view view:nth-of-type(2){
    margin-right: 10rpx;
}
